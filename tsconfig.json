  {
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "skipLibCheck": true,
      "paths": {
        "@/*": ["./src/*"]
      },
      "target": "es6",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react-jsx"
    },
    "include": ["src"]
  }
